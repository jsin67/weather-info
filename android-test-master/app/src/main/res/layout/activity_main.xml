<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <TextView
            android:id="@+id/tv_location_lbl"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:padding="10dp"
            android:text="@string/weather_info"/>
    
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@color/current_info" android:orientation="vertical">
       
    
        <TextView
                android:id="@+id/tv_current_date"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="tv_current_date"/>
    
        <LinearLayout
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
        
            <TextView
                    android:id="@+id/tv_current_min"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="min"/>
        
            <TextView
                    android:id="@+id/tv_current_temp"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:textColor="@color/colorPrimary"
                    android:text="tv_current_temp"/>
        
            <TextView
                    android:id="@+id/tv_current_max"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="tv_current_max"/>
        </LinearLayout>
        <TextView
                android:id="@+id/tv_current_description"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="tv_current_description"/>
        <TextView
                android:id="@+id/tv_current_location"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/weather_info"/>


    </LinearLayout>
    
    <TextView
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:text="@string/forecast_info"/>
    
    
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.MainActivity" />

</LinearLayout>