<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context="com.example.androidtest.ui.LocationActivity">

		<EditText
				android:layout_alignParentTop="true"
				android:id="@+id/edt_location"
				android:layout_width="match_parent"
				android:layout_toLeftOf="@id/btn_add_location"
				android:layout_margin="8dp"
				android:hint="Enter location to add in the list"
				android:layout_height="wrap_content"/>
		<Button android:id="@+id/btn_add_location"
		        android:layout_alignParentRight="true"
		        android:layout_margin="8dp"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Add"/>

		<androidx.recyclerview.widget.RecyclerView
				android:layout_below="@id/edt_location"
				android:layout_width="match_parent"
				android:layout_margin="8dp"
				android:id="@+id/rcy_locations"
				android:layout_height="match_parent"
		/>
</RelativeLayout>
